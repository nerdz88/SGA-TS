extends ../../commun/master-template.pug 

block content
    h1 #{question._nom}
    ul.entries 
        li 
            <strong>Tag:</strong> #{question._tags}
        li 
            <strong>Description</strong>: 
            br
            |#{question._descriptionQuestion} 
        li 
            <strong>Réponse:</strong> #{question._reponse ? "Vrai" : "Faux"}
        li 
            <strong>Description bonne réponse:</strong> 
            br
            |#{question._descriptionReponse}
        li 
            <strong>Description mauvaise réponse:</strong>
            br
            |#{question._mauvaiseReponseDescription}

    a(class="btn btn-modifier-question" href="/enseignant/question/modifier/" + question._idEspaceCours + "/" + question._id) Modifier  
    a(class="btn btn-delete-question" href="javascript:void(0)" 
        data-id-question=question._id
        data-nom=question._nom
        data-id-espace-cours=question._idEspaceCours) Supprimer 
    

    //- End bloc content
block more-script
    script(type="text/javascript" src="/lib/enseignant/question/question.js")