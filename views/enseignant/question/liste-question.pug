extends ../../commun/master-template.pug 

block content
    //- Start bloc content  
    h1 Questions
    if idEspaceCours
        a(class="btn btn-ajouter-question" href="/enseignant/question/ajouter/" + idEspaceCours) Ajouter
    ul.entries
        each uneQuestion in questions
            li 
                strong #{uneQuestion._nom} 
                |- Tag: #{uneQuestion._tags}      
                a(class="btn btn-detail-question" href="/enseignant/question/detail/" + uneQuestion._idEspaceCours + "/" + uneQuestion._id) DÃ©tail
                a(class="btn btn-modifier-question" href="/enseignant/question/modifier/" + uneQuestion._idEspaceCours + "/" + uneQuestion._id) Modifier              
                a(class="btn btn-delete-question" href="javascript:void(0)"
                    data-id-question=uneQuestion._id
                    data-nom=uneQuestion._nom
                    data-id-espace-cours=uneQuestion._idEspaceCours) Supprimer 
        else
            li
                em Vous n'avez pas de questions

    //- End bloc content
block more-script
    script(type="text/javascript" src="/lib/enseignant/question/question.js")