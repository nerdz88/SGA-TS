extends ../commun/master-template.pug 

block content
  //- Start bloc content
  h1 Mes cours
  a(class="btn btn-ajouter-cours" href='/enseignant/cours/ajouter') Ajouter
  ul.entries
    each unCours in cours
      each groupe in unCours.groupeCours
        li         
          strong #{unCours._sigle} - #{unCours._titre} - Gr: #{groupe._numero}       
          a(class="btn btn-detail-cours" href="/enseignant/cours/detail/" + unCours._sigle + "/" + groupe._id) DÃ©tail 
          a(class="btn btn-question-cours" href="/enseignant/question/groupe/" + groupe._id) Questions 
          a(class="btn btn-delete-cours" href="javascript:void(0)" 
            data-id-groupe=groupe._id
            data-no-groupe=groupe._numero
            data-sigle=unCours._sigle) Supprimer 
    else
      li
        em Vous n'avez pas de cours

  //- End bloc content

block more-script
  script(type="text/javascript" src="/lib/enseignant/cours.js")
