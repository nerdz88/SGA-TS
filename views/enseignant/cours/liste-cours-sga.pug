extends ../../commun/master-template.pug 

block content
  //- Start bloc content
  h1 Mes cours
  a(class="btn btn-ajouter-cours" href='/enseignant/cours/ajouter') Ajouter
  ul.entries
    each espace in espaceCours    
      li         
        strong #{espace._cours._sigle} - #{espace._cours._titre} - Gr: #{espace._numero}       
        a(class="btn btn-detail-cours" href="/enseignant/cours/detail/" + espace._id) DÃ©tail 
        a(class="btn btn-question-cours" href="/enseignant/question/" + espace._id) Questions 
        a(class="btn btn-delete-cours" href="javascript:void(0)" 
            data-id-espace-cours=espace._id
            data-titre-espace-cours=espace._cours._sigle + "-" + espace._cours._titre + "- Gr :" + espace._numero
          ) Supprimer 

    else
      li
        em Vous n'avez pas de cours

  //- End bloc content

block more-script
  script(type="text/javascript" src="/lib/enseignant/cours/cours.js")
