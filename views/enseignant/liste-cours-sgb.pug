html
  head
    title= title
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css')
    <!-- link(rel='stylesheet' href='/css/style.css') -->
  body

    div.container
      h1 Vos groupes-cours:
    
      ul.entries
        each unCours in cours
          li         
           strong #{unCours._sigle} - #{unCours._titre} - Gr: #{unCours._groupe}       
           a(class="btn-ajouter-cours", href="/api/v1/sga/enseignant/cours/ajouter/" + unCours._id) Ajouter    
        else
          li
            em Vous n'avez pas de groupes-cours

